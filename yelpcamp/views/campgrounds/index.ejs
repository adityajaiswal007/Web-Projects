<% include ../partials/header %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to Campground Page</h1>
			<p>
				<a class="btn btn-primary btn-large" href="/campground/new">Add new Campground</a>
			</p>
		</div>
	</header>
    <div class="row" style="display:flex;flex-wrap:wrap;text-align:center;">
		<% camp.forEach(function(details){ %>
			<div class="col-md-3 col-sm-6">
			    <div class="thumbnail">
		        	<img src="<%= details.image %>">
		        	<div class="caption">
		        		<h3><%= details.name %></h3>
		        	</div>
		        	</p>
		        		<a class="btn btn-info" href="/campground/<%= details._id %>">More Info</a>
		        	</p>
			    </div>
			</div>
		<% }); %>
	</div>
</div>

<% include ../partials/footer%>